//Counting Positive and Negative Numbers in an Array

#include <stdio.h>

int main() {

int numbers[8], positiveCount = 0, negativeCount = 0;

// Input 8 numbers

for (int i = 0; i < 8; i++) {

printf("Enter number %d: ", i + 1);

scanf("%d", &numbers[i]);

}

// Count positive and negative numbers

for (int i = 0; i < 8; i++) {

if (numbers[i] > 0) {

positiveCount++; // Increment positive count

} else if (numbers[i] < 0) {

negativeCount++; // Increment negative count

}

}

printf("Number of positive numbers: %d\n", positiveCount);

printf("Number of negative numbers: %d\n", negativeCount);

return 0;}
